ELF := ftp-server.elf

CC ?= cc

CFLAGS := -g -Wall

ifdef FORK_SERVER
	CFLAGS += -DFORK_SERVER=$(FORK_SERVER)
endif

all: $(ELF)

%.o: %.c
	$(CC) -c $(CFLAGS) -o $@ $^

$(ELF): main.o cmd.o
	$(CC) -o $@ main.o cmd.o -lpthread

clean:
	rm -f *.o $(ELF)

